<form action="<%= cat_rental_requests_url %>" method="post">

  <label for="cat">Cat</label>
  <select id="cat" name="cat_rental_request[cat_id]">
    <option value="blank" selected disabled>-- Please select a cat --</option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="start_date">start date</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]" value="<%= Date.today %>">
  <br>

  <label for="end_date">end date</label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]" value="<%= Date.today %>">
  <br>

  <input type="submit" value="Rent Cat!">

</form>
